<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
  <%# user_idからfeedテーブルのレコードを取得し一つずつuserに入れる %>
  <%# userにはfeedのレコードが入っている%>
    <% @user.feeds.each do |feed| %>
      <tr>
        <td><%= image_tag feed.image.url %>
        <td><%= feed.text %></td>
        <td><%= link_to 'Show', feed_path(feed.id) %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed.id) %></td>
        <td><%= link_to 'Destroy', feed_path(feed.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
