<h1>確認画面</h1>
<%= form_with(model: @feed, url: feeds_path, local: true) do |form| %>
  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <%= form.label :image %>
  <%= image_tag(@feed.image.url) if @feed.image.url %>
  <%= form.hidden_field :image_cache %>
  <div class="field">
    <%= form.label :text %>
    <%= form.hidden_field :text %>
    <%= @feed.text %>
  </div>
  <div class="actions">
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= form_with(model:@feed, url:new_feed_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :text %>
  <%= form.submit "戻る", name: "back",class: "btn btn-primary back-button",role: "button" %>
<% end %>